public class Max {
    public static void main(String[] args) {

        int[] arr = {12, 25, 13, 15, 10};
        System.out.println(getMax(arr));
    }

    // work on edge cases here, like array being null
    static int getMax(int[] arr) {
        int maxVal = arr[0];
        for (int i = 0; i < arr.length; i++) {
            if(arr[i] > maxVal) {
                maxVal = arr[i];
            }
        }
        return maxVal;
    }
}
