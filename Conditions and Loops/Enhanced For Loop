import java.util.ArrayList;

public class Main {

	public static void main(String[] args) {
			
		// for-each = 	traversing technique to iterate through the elements in an array/collection
		//				less steps, more readable
		//				less flexible
		
		String[] animals = {"cat","dog","rat","bird"};  // This is for simple Array

		ArrayList<String> animals = new ArrayList<String>(); // This is for ArrayList
		
		animals.add("cat");
		animals.add("dog");
		animals.add("rat");
		animals.add("bird");
		
		for(String i : animals) {         // This is enhanced for loop or for-each loop
			System.out.println(i);
		}
